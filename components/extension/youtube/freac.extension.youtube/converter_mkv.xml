<VideoConverter>
  <name>Matroska Video Converter</name>
  <version>1.0</version>
  <decoder>ffmpeg-mkv_audio-dec</decoder>

  <format>
    <name>Matroska Video</name>
    <extension>mkv</extension>
  </format>

  <external>
    <command>ffmpeg</command>
    <arguments>-i %INFILE -f matroska -c:v copy -c:a copy %OUTFILE</arguments>
  </external>
</VideoConverter>
